{
    "name": "boardgame-backend",
    "version": "1.0.0",
    "description": "Backend for boardgame tracking application",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "migrate": "node scripts/run-migrations.js",
        "start:migrate": "node scripts/run-migrations.js && node server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:setup": "node scripts/setup-test-db.js",
        "db:create": "node scripts/create-database.js",
        "seed": "node scripts/seed-sample-data.js",
        "email:dev": "npx react-email dev --dir emails --port 3001",
        "load:generate-tokens": "node scripts/generate-load-test-tokens.js",
        "load:test": "npx artillery run tests/load/availability-pipeline.yml",
        "load:test:heatmap": "npx artillery run tests/load/heatmap-load.yml"
    },
    "dependencies": {
        "@bull-board/api": "^6.18.0",
        "@bull-board/express": "^6.18.0",
        "@react-email/components": "^1.0.6",
        "@sendgrid/mail": "^8.1.6",
        "@sentry/node": "^8.0.0",
        "axios": "^1.10.0",
        "bullmq": "^5.69.1",
        "cors": "^2.8.5",
        "csv-parser": "^3.2.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "googleapis": "^169.0.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "jwks-rsa": "^3.2.0",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.12",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-email": "^5.2.5",
        "resend": "^4.8.0",
        "sequelize": "^6.35.0",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "artillery": "^2.0.30",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
